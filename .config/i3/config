for_window [class="^Steam$" title="^Steam Guard - Computer Authorization Required$"] floating enable

bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'Do you really want to exit i3?' -B 'Yes' 'i3-msg exit'"

mode "resize" {
        bindsym h resize shrink width 1 px or 1 ppt
        bindsym j resize grow height 1 px or 1 ppt
        bindsym k resize shrink height 1 px or 1 ppt
        bindsym l resize grow width 1 px or 1 ppt

        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"

# class                 border  backgr. text    indicator child_border
client.focused          #141414 #141414 #b2b2b2 #777777   #777777
client.focused_inactive #141414 #141414 #141414 #000000   #000000
client.unfocused        #141414 #141414 #141414 #000000   #000000
client.urgent           #2f343a #fb4934 #ffffff #fb4934   #fb4934
client.placeholder      #000000 #0c0c0c #ffffff #000000   #0c0c0c

client.background       #ffffff

for_window [class="^.*"] border pixel 1
gaps top 0
gaps inner 0

set $mode_gaps_inner inner gaps

bindsym $mod+Shift+g mode "$mode_gaps_inner"

mode "$mode_gaps_inner" {
        bindsym plus  gaps inner all plus 5
        bindsym minus gaps inner all minus 5
        bindsym 0     gaps inner all set 0

        bindsym Escape mode "default"
}

bar {
  status_command i3blocks
  position top
  font pango: GoMono Nerd Font 10
  height 25
  strip_workspace_numbers no
  strip_workspace_name yes

  colors {
    background #141414
    statusline #e1e1e1
    separator #e1e1e1

    # <colorclass> <border> <background> <text>
    # gruvbox dark hard
    #focused_workspace  #1d2021 #1d2021 #ebdbb2
    #active_workspace   #333333 #ff0000 #ebdbb2
    #inactive_workspace #1d2021 #1d2021 #665c54
    #urgent_workspace   #1d2021 #1d2021 #fb4934
    #binding_mode       #d79921 #d79921 #1d2021

    # shirotelin/envy
    focused_workspace  #141414 #141414 #e1e1e1
    active_workspace   #333333 #ff0000 #e1e1e1
    inactive_workspace #141414 #141414 #665c54
    urgent_workspace   #fb4934 #fb4934 #000000
    binding_mode       #d79921 #d79921 #1d2021
  }
}

