for_window [class="^Steam$" title=".* CD key"] floating enable
for_window [class="^Steam$" title="^Steam - Self Updater$"] floating enable
for_window [class="^Steam$" title="^Screenshot Uploader$"] floating enable
for_window [class="^Steam$" title="^Steam Guard - Computer Authorization Required$"] floating enable

bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'Do you really want to exit i3?' -B 'Yes' 'i3-msg exit'"

mode "resize" {
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"

# class                 border  backgr. text    indicator child_border
client.focused          #504945 #504945 #ffffff #504945   #504945
client.focused_inactive #3c3836 #3c3836 #ffffff #32302f	  #32302f
client.unfocused        #1d2021 #1d2021 #888888 #32302f   #32302f
client.urgent           #2f343a #900000 #ffffff #900000   #900000
client.placeholder      #000000 #0c0c0c #ffffff #000000   #0c0c0c

client.background       #ffffff

for_window [class="^.*"] border pixel 1
gaps top 0
gaps inner 0

set $mode_gaps_inner inner gaps + - 0

bindsym $mod+Shift+g mode "$mode_gaps_inner"

mode "$mode_gaps_inner" {
        bindsym plus  gaps inner all plus 5
        bindsym minus gaps inner all minus 5
        bindsym 0     gaps inner all set 0

        bindsym Escape mode "default"
}

bar {
	status_command i3blocks
    position bottom
	font pango: cozette 9
	workspace_min_width 45
	strip_workspace_numbers yes
	strip_workspace_name no

	colors {
		background #0b0c0c
    	statusline #ebdbb2
    	separator #666666

		# <colorclass> <border> <background> <text>
    	focused_workspace  #0b0c0c #0b0c0c #ebdbb2
    	active_workspace   #333333 #ff0000 #ebdbb2
    	inactive_workspace #0b0c0c #0b0c0c #665c54
    	urgent_workspace   #2f343a #900000 #ffffff
    	binding_mode       #d79921 #d79921 #1d2021
	}
}

exec --no-startup-id $HOME/scripts/curlock.sh
