# config editing
alias zshrc='$EDITOR $HOME/.zshrc'
alias i3rc='$EDITOR $XDG_CONFIG_HOME/i3/config'
alias termrc='$EDITOR $XDG_CONFIG_HOME/alacritty/alacritty.yml'
alias vimrc='$EDITOR $XDG_CONFIG_HOME/nvim/init.vim'
alias reload='source $HOME/.zshrc'

# git commands
alias gitl="git log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit"
alias gits='git status --short'
alias gita="git add ."
alias gitc="git commit -m 'auto-commit'"
alias gitp="git push origin master"
alias gitauto="gita && gitc && gitp"

alias yadms='yadm status --short'
alias yadma='yadm add -u'
alias yadmc="yadm commit -m 'auto-commit'"
alias yadmp='yadm push origin master'
alias yadmauto="yadma && yadmc && yadmp"

# miscellaneous commands
alias rm='rm -i'
alias sudovi='sudo nvim'
alias vi='nvim'
alias google='ping -c1 8.8.8.8'
alias yt='youtube-dl'
alias joystick='ds4drv --hidraw'
alias mongo='mongo --norc'
alias nvidia-settings='nvidia-settings --config="$XDG_CONFIG_HOME"/nvidia/settings'
alias sqlite3='sqlite3 -init "$XDG_CONFIG_HOME"/sqlite3/sqliterc'
alias sxiv='sxiv -b'
alias diskspace='df -H'
alias twitch='concat -client-id "$TWITCHID" -vod '
alias tmux='tmux -u'
alias volume='alsamixer -g'
alias wget='wget --hsts-file=$XDG_CACHE_HOME/wget-hsts'
alias zathura='zathura --fork'

# bookmarks
alias notes="cd $HOME/documents/notes/ && ls"
alias stack="nvim --noplugin workspace/STACK"
alias wv="cd $HOME/pictures/misc/.c/v && ls"
alias vswap="cd $HOME/.local/share/nvim/swap && ls && rm -I *"
