let mapleader=" "

set ignorecase
set smartcase
set hlsearch
set incsearch
set shiftwidth=4
set softtabstop=4
set tabstop=4
set expandtab
set number
" set autoindent " test
set clipboard=unnamed

nnoremap <leader>h :nohlsearch<cr>
nnoremap K :vsc Edit.QuickInfo<cr>
nnoremap gcc :vsc Edit.ToggleComment<CR>
vnoremap gc :vsc Edit.ToggleComment<CR><Esc><Esc>
