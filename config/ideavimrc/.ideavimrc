let mapleader=" "

" Plug 'tpope/vim-commentary'

set visualbell
set noerrorbells
set number
set scrolloff=5
set incsearch
set ignorecase
set smartcase
set clipboard=unnamed
set clipboard^=ideaput
set idearefactormode=keep
set ideajoin
set NERDTree
set commentary
let g:NERDTreeMapActivateNode="l"
let g:NERDTreeMapJumpParent="h"
" Don't use Ex mode, use Q for formatting.
map Q gq


nmap <c-j> :m +1<cr>
nmap <c-k> :m -2<cr>
nmap <c-p> <Action>(GotoFile)
nmap <c-s-p> <Action>(GotoAction)
nmap <c-s-o> <Action>(OptimizeImports)
nmap ]d <Action>(GotoNextError)
nmap [d <Action>(GotoPreviousError)
nmap <leader>q <Action>(CloseEditor)
nmap <leader>n :NERDTreeToggle<cr>
nmap <leader>g <Action>(Gradle.ExecuteTask)
nmap <leader>m <Action>(Maven.ExecuteGoal)
nmap <leader>i <Action>(SplitHorizontally)
nmap <leader>o <Action>(SplitVertically)
nmap <leader>r <Action>(RenameElement)
nmap <leader>f <Action>(ReformatCode)
" For formatting, especially comments
" Depends on https://plugins.jetbrains.com/plugin/7234-wrap-to-column/
" NOTE: vnoremap doesn't work with Actions
"nmap gq <Action>(com.andrewbrookins.idea.wrap.WrapAction)
