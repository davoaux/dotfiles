#!/usr/bin/env bash

opt1="Shutdown"
opt2="Lock"
opt3="Reboot"
opt4="Suspend"

list="$opt1\n$opt2\n$opt3\n$opt4"

opt=$(echo -e $list | rofi -dmenu -lines 4 -i)

case $opt in
  $opt1) systemctl poweroff -i;;
  $opt2) betterlockscreen -l dimblur;;
  $opt3) systemctl reboot -i;;
  $opt4) systemctl suspend -i;;
esac
