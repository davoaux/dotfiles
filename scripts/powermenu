#!/usr/bin/env bash

option1="shutdown"
option2="logout"
option3="reboot"
option4="suspend"

list="$option1\n$option2\n$option3\n$option4"

opt=$(echo -e $list | rofi -dmenu -config ~/.config/rofi/powermenu.rasi -location 3 -xoffset -15 -yoffset 35 -lines 4)
case $opt in
  $option1) systemctl poweroff -i;;
  $option2) i3-msg exit;;
  $option3) systemctl reboot -i;;
  $option4) systemctl suspend -i;;
esac
